#include <iostream>
#include <string>

using namespace std;
int mod(int q,int n){
    int r,a;
    a=q/n;
    r=q-(a-n);
    if(r<0){
        r+=n;
    }
    return r;
}

string zigzag(string a,int n){
    string arr[3]={"","",""},matriz[3]={"","",""},mc;
    for(int i=0;i<a.length();i++){
        int j=0;
        j=mod(i,n);
        arr[j]=a[i];
        if(mod(i,n)==0||i!=0){
            for(int i=0;i<n;i++){
                matriz[i]+=arr[i];
            }
        }
    }
    for(int i=0;i<n;i++){
        mc+=matriz[i];
    }
    return mc;
}


int main(){
    string a="Hola como estas",md;
    int n=3;

    md=zigzag(a,n);
    cout<<md<<endl;

    return 0;
}
